@model Ejercicio24MVC.Models.Tarea

@{
    ViewBag.Title = "Delete";
    Layout = ("~/Views/Shared/_FrontPage.cshtml");
}
<style>
    /* ... tus otros estilos ... */
    .form-actions {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        font-size: 20px;
    }

    input[type="submit"] {
        width: 90%;
        font-size: 20px;
        text-align: center;
        justify-content: center;
        background-color: #add8e6; /* Este es un color celeste común */
        color: #000000; /* Color del texto en negro para contraste */
    }


    h2 {
        text-align: center;
    }

    .info-box {
        padding: 10px;
        margin-bottom: 20px;
        flex-direction: row;
        justify-content: space-between;
        align-items: center; /* Alinea los elementos verticalmente en el centro */
        font-size: 20px;
    }

    .dl-horizontal {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 35%;
        font-size: 20px;
        column-gap: 20px;
        margin: 0 auto;
    }
</style>
<h2>Borrar Tarea</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaVencimiento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Proyecto.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Proyecto.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color btn-delete">
            <input type="submit" value="Borrar" class="btn btn-default" />

        </div>
        <h3>@Html.ActionLink("Regresar a la lista", "Index")</h3>

    }
</div>
